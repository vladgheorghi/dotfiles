// Inspired by https://gitlab.com/notscripter/dotfiles/-/tree/main/waybar?ref_type=heads

{
  "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "height": 10, // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width
  "spacing": 8, // Gaps between modules (4px)
  "margin-top": 8,
  "margin-left": 8,
  "margin-right": 8,
  "mode": "dock",
  "reload_style_on_change": true,
  "include": [
    "~/.config/waybar/modules.json",
    "~/.config/waybar/quicklinks.json",
    "~/.config/waybar/hardware.json",
    "~/.config/waybar/media.json",
    "~/.config/waybar/sound.json"
  ],
  "modules-left": [
    "custom/appmenu",
    "custom/exit",
    "battery",
    "group/quicklinks",
    "tray",
    "hyprland/window"
  ],
  "modules-center": [
    "hyprland/workspaces"
  ],
  "modules-right": [
    "group/media",
    "network",
    // "mpd",
    "group/sound",
    "group/hardware",
    "clock"
    //"custom/notification"
  ]
}
